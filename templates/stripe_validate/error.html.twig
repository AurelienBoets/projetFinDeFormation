{% extends "base.html.twig" %}

{% block title %}Erreur de paiement{% endblock %}

{% block search %}
    {{form(form)}}
{% endblock %}

{% block content %}
    <div class='error'>
        <h2>Erreur de paiement</h2>
        <p>Bonjour {{order.user.firstname}} {{order.user.lastname}}, il semblerait que votre paiement est échoué pour votre commande n°{{order.reference}} <br>
        Un email vient d'être envoyée à l'adresse <strong>{{order.user.email}}</strong>.
        </p>
        <hr>
        <a href="{{path('app_order')}}" class="btn">Réessayer le paiement</a>
    </div>
{% endblock %}